<%= link_to "新規登録", signup_path, class: "btn btn-primary" %>
<%= paginate @items %>
<% @items.each do |item| %>
  <%= link_to item.name, item %>
  <%
  if item.reviews != []
    score = 0.0
    item.reviews.each do |review|
      score += review.score
    end
    score = (score / item.reviews.count).round(2)
  end
  %>
  評価：<%= score %>
  <%= item.price %>
  <%= item.stock %>
  <%= item.release %>
  <hr>
<% end %>
<%= paginate @items %>
