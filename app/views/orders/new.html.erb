<% @page_title = "注文画面" %>
<h1>注文画面</h1>
<%= link_to "カートに戻る", :cart %>
<%= form_for @order do |f| %>

<h4>お届け先住所</h4>
<%= current_user.name%>
<%= current_user.postcode%>
<%= current_user.address%>

<h4>決済方法</h4>
<div class="form-check">
  <%= f.radio_button :pay, 1 , class: "form-check-input",checked: true%>
  <%= f.label :pay_1, "代引き" ,class: "form-check-label"%>
</div>

<div class="form-check">
  <%= f.radio_button :pay, 2 , class: "form-check-input"%>
  <%= f.label :pay_2, "クレジット" ,class: "form-check-label" %>
</div>

<div class="form-check">
  <%= f.radio_button :pay, 3 , class: "form-check-input"%>
  <%= f.label :pay_3, "銀行振込" ,class: "form-check-label" %>
</div>

<h4>注文商品</h4>
<% count_id = []%>
<%total_price = 0%>
<% @items.each do |item| %>
  <%total_price += item.price%>
  <% if !count_id.include?(item.id)%>
    <%= link_to item.name, item %>
    <%= item.price %>
    <%= item.stock %>
    <%= item.release %>
    数量: <%= session[:cart_item].count(item.id) %>
    <% count_id.push(item.id)%>
    <hr>
  <% end %>
<% end %>
支払い金額: <%=total_price%> 円<br>
<%= f.submit "注文を確定する", class: "btn btn-primary" %>
<% end %>
