<div class="container container-fluid d-inline-flex justify-content-center">
  <div class="row">
    <div class="col-md-12">
      <%= paginate @items %>
    </div>
  </div>
</div>

<div class="py-5">
  <div class="container">
    <div class="row">

      <% @items.each do |item| %>
      <%
      score=0.0
      if item.reviews != []
        item.reviews.each do |review|
          score += review.score
        end
        score = (score / item.reviews.count).round(2)
      end
      %>


      <div class="col-lg-4 mb-3">
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-10">
            <a href="<%=bar%><%=actor%>/items/<%=item.id%>" class="card text-center"> <img class="card-img-top" src="https://lh3.googleusercontent.com/npew9dDnrDUsZl3lrIzjGAUr2SGR6qC2XLteyiNSeAp2SumD-eE3cruubr5FunAWyq0=w300-h250" alt="Card image cap">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12">
                    <p><%=item.name%></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="row">
                      <div class="col-md-6">
                        <h4>￥<%=item.price%></h4>
                      </div>
                      <div class="col-md-6">
                        <h4>★<%=score%></h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="row">
                      <div class="col-md-6 pt-3">
                        <h6 >在庫：<%=item.stock%></h6>
                      </div>
                      <div class="col-md-6 pt-3">
                        <h6>発売日<br><%=item.release%></h6>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <div class="col-md-1"></div>
        </div>
      </div>

    <% end %>

    </div>
  </div>
</div>

<div class="container container-fluid d-inline-flex justify-content-center">
  <div class="row">
    <div class="col-md-12">
      <%= paginate @items %>
    </div>
  </div>
</div>
