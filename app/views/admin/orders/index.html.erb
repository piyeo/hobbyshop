<% @page_title = "注文一覧" %>
<div class="col-md-12 mt-4">
  <h1 style="font-size: 35px;">注文一覧</h1>
</div>
<%= render partial: 'shared/paginate', locals: { target: @orders}%>
      <div class="container py-3">
        <% if @orders == [] %>
          <h4>注文がありません</h4>
        <% end %>
        <% @orders.each do |order|%>
        <%
        pay_name = ""
        case order.pay
        when 1 then
        pay_name = "代引き"
        when 2 then
        pay_name = "銀行振込"
        when 3 then
        pay_name = "クレジット"
        end
        %>
        <% if order.isCancel%>
          <p>キャンセルされています</p>
        <% end %>
        <h5>注文日：<%= order.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></h5>
        <p>支払い方法：<%= pay_name %>　合計: ￥<%=order.totalprice%> </p>
        <% count_id = []%>
        <ul>
          <% order.items.each do |item|%>
          <% if !count_id.include?(item.id)%>
          <li class=""><%= link_to item.name, [:admin,item] %> 数量：<%= order.items.where(id: item.id).count%></li>
          <% end %>
          <% count_id.push(item.id)%>
          <% end %>
        </ul>
        <p>発送状況：<%= order.isDeliver ? "発送済み" : "未発送" %></p>
        <p class="pb-2"><%= link_to "注文詳細", order%>
          <% if !order.isCancel%>
            <% if order.isDeliver %>
              <%= link_to "発送を中止する",
                        [:admin, order,isDeliver: false],
                        method: :patch,
                        isDeliver: order.isDeliver
                         %>
            <% else %>
            <%= link_to "発送する",
                      [:admin, order,isDeliver: true],
                      method: :patch,
                      isDeliver: order.isDeliver
                       %>
            <% end %>
          <% end %>
        </p>
        <hr>
        <% end %>
      </div>
<%= render partial: 'shared/paginate', locals: { target: @orders}%>
